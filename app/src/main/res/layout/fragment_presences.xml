<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PresencesFragment"
    android:background="@color/lightGrey">


    <ImageView
        android:id="@+id/backPresences"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/textPresences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        android:text="Presences"
        android:textStyle="bold"
        android:textSize="22sp"/>
    
    
    <androidx.cardview.widget.CardView
        android:id="@+id/expandable"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPresences"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Mathematics"/>

            <TextView android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text1"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:text="15 materials"/>
            
            
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/presences_button"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="35dp"
                android:text="100%"
                android:textColor="@color/white"/>

            <ImageView android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text2"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="10dp"/>


         <LinearLayout
             android:id="@+id/layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/line"
             android:orientation="vertical"
             android:animateLayoutChanges="true">


             <TextView android:id="@+id/t1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:textColor="@color/grey"
                 android:layout_marginTop="5dp"
                 android:text="To Day"
                 android:layout_marginStart="20dp"/>

             <TextView android:id="@+id/t2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:textColor="@color/grey"
                 android:layout_marginTop="5dp"
                 android:text="15 Dec 2021"
                 android:layout_marginStart="20dp"/>

             <TextView android:id="@+id/t3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:textColor="@color/grey"
                 android:layout_marginTop="5dp"
                 android:text="12 Dec 2021"
                 android:layout_marginStart="20dp"/>

         </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    
    
  <androidx.cardview.widget.CardView
      android:id="@+id/click"
      android:layout_width="30dp"
      android:layout_height="30dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="280dp"
      app:cardCornerRadius="50dp">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/keyboard"/>

  </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/expandable2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expandable"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView android:id="@+id/text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Biology"/>

            <TextView android:id="@+id/text22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text12"
                app:layout_constraintTop_toBottomOf="@id/text12"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:text="15 materials"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/presences_button"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="35dp"
                android:text="85%"
                android:textColor="@color/white"/>

            <ImageView android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text22"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="10dp"/>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:orientation="vertical"
                android:animateLayoutChanges="true">


                <TextView android:id="@+id/t12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="To Day"
                    android:layout_marginStart="20dp"/>

                <TextView android:id="@+id/t22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="15 Dec 2021"
                    android:layout_marginStart="20dp"/>

                <TextView android:id="@+id/t32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="12 Dec 2021"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/click2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/click"
        android:layout_marginTop="230dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/keyboard"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/expandable3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expandable2"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView android:id="@+id/text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="English"/>

            <TextView android:id="@+id/text23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text13"
                app:layout_constraintTop_toBottomOf="@id/text13"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:text="15 materials"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/presences_button_2"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="35dp"
                android:text="45%"
                android:textColor="@color/white"/>

            <ImageView android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text23"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="10dp"/>


            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/line3"
                android:orientation="vertical"
                android:animateLayoutChanges="true">


                <TextView android:id="@+id/t13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="To Day"
                    android:layout_marginStart="20dp"/>

                <TextView android:id="@+id/t23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="15 Dec 2021"
                    android:layout_marginStart="20dp"/>

                <TextView android:id="@+id/t33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:text="12 Dec 2021"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/click3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/click2"
        android:layout_marginTop="230dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/keyboard"/>

    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>
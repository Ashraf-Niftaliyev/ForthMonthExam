<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
      android:id="@+id/cardSubjects"
      android:layout_width="80dp"
      android:layout_height="80dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      app:cardCornerRadius="15dp">

      <ImageView android:id="@+id/imageSubjects"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"/>

  </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/cardSubjects"
        app:layout_constraintEnd_toEndOf="@id/cardSubjects"
        app:layout_constraintTop_toBottomOf="@id/cardSubjects"
        android:layout_marginTop="10dp"
        android:hint="Math"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>